    <script>
        let total = 0;
        const selectedProducts = {};
        const orderItemsElement = document.getElementById('order-items');
        const whatsappNumber = "+51923966738";
        
        // Inicializar productos
        document.querySelectorAll('.product').forEach(product => {
            const productName = product.getAttribute('data-name');
            const productPrice = parseInt(product.getAttribute('data-price'));
            selectedProducts[productName] = { 
                price: productPrice, 
                quantity: 0 
            };
        });

        // Botones + y -
        document.querySelectorAll(".quantity-btn").forEach(button => {
            button.addEventListener("click", () => {
                const productName = button.getAttribute('data-product');
                const isIncrease = button.classList.contains('increase');

                if (isIncrease) {
                    selectedProducts[productName].quantity += 1;
                } else if (selectedProducts[productName].quantity > 0) {
                    selectedProducts[productName].quantity -= 1;
                }

                document.getElementById(`quantity-${productName}`).textContent =
                    selectedProducts[productName].quantity;

                updateTotal();
                updateOrderDisplay();
            });
        });
        
        // Actualizar el total
        function updateTotal() {
            total = 0;
            for (const [name, data] of Object.entries(selectedProducts)) {
                total += data.price * data.quantity;
            }
            document.getElementById("total").textContent = total;
        }
        
        // Actualizar visualización del pedido
        function updateOrderDisplay() {
            const productsWithQuantity = Object.entries(selectedProducts)
                .filter(([_, data]) => data.quantity > 0);
            
            if (productsWithQuantity.length === 0) {
                orderItemsElement.innerHTML = "No has seleccionado productos aún";
                return;
            }
            
            let orderHTML = "<ul>";
            for (const [name, data] of productsWithQuantity) {
                orderHTML += `<li>${data.quantity} x ${name} - ${data.price * data.quantity} PEN</li>`;
            }
            orderHTML += "</ul>";
            orderItemsElement.innerHTML = orderHTML;
        }
        
        // Enviar pedido por WhatsApp
        document.getElementById("send-whatsapp").addEventListener("click", () => {
            const productsWithQuantity = Object.entries(selectedProducts)
                .filter(([_, data]) => data.quantity > 0);
                
            if (productsWithQuantity.length === 0) {
                alert("Por favor, selecciona al menos un producto antes de enviar el pedido.");
                return;
            }
            
            let message = "¡Hola! Quiero hacer el siguiente pedido:\n\n";
            
            for (const [name, data] of Object.entries(selectedProducts)) {
                if (data.quantity > 0) {
                    message += `• ${data.quantity} x ${name} - ${data.price * data.quantity} PEN\n`;
                }
            }
            
            message += `\nTotal: ${total} PEN`;
            message += "\n\nGracias!";
            
            const whatsappURL = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`;
            window.open(whatsappURL, "_blank");
        });
        
        // Navegación entre páginas
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                
                // Actualizar clase activa en navegación
                document.querySelectorAll('.nav-link').forEach(navLink => {
                    navLink.classList.remove('active');
                });
                link.classList.add('active');
                
                // Mostrar página correspondiente
                const pageId = link.getAttribute('data-page');
                document.querySelectorAll('.page').forEach(page => {
                    page.classList.remove('active');
                });
                document.getElementById(`${pageId}-page`).classList.add('active');
            });
        });
        
        // Contactar por WhatsApp
        document.getElementById('contact-whatsapp').addEventListener('click', () => {
            const message = "¡Hola! Me gustaría contactarme con ROWR Fast Food para realizar una consulta.";
            const whatsappURL = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`;
            window.open(whatsappURL, "_blank");
        });
        
        // Enviar reclamo por WhatsApp
        document.getElementById('send-complaint').addEventListener('click', () => {
            const date = document.getElementById('complaint-date').value;
            const time = document.getElementById('complaint-time').value;
            const details = document.getElementById('complaint-details').value;
            
            if (!date || !time || !details) {
                alert("Por favor, completa todos los campos del formulario de reclamo.");
                return;
            }
            
            const message = `LIBRO DE RECLAMACIONES - ROWR FAST FOOD\n\nFecha: ${date}\nHora: ${time}\n\nDetalles del reclamo:\n${details}`;
            const whatsappURL = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`;
            window.open(whatsappURL, "_blank");
        });
    </script>
</body>
